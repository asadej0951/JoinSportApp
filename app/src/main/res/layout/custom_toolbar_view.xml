<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <import type="android.graphics.drawable.Drawable"/>

        <import type="com.wewillapp.masterproject.vo.Resource"/>

        <import type="com.wewillapp.masterproject.vo.enumClass.Status"/>

        <variable
            name="loginResource"
            type="Resource"/>
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/d10dp"
        android:paddingEnd="@dimen/d10dp"
        android:background="@color/colorBgApp"
        android:layout_height="?actionBarSize">


        <ImageView
            android:id="@+id/ivToolBarBack"
            android:layout_weight="0"
            android:padding="@dimen/d5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_base_background"
            android:src="@drawable/ic_back"/>


        <TextView
            android:layout_marginBottom="@dimen/d1dp"
            android:id="@+id/tvToolBarTitle"
            android:text="@string/app_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_quark_bold"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_size_large"/>


        <TextView
            android:visibility="gone"
            android:layout_marginBottom="@dimen/d5dp"
            android:id="@+id/tvToolBarManage"
            android:text="@string/app_name"
            android:layout_weight="0"
            android:gravity="bottom|right"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d15dp"/>

    </LinearLayout>
</layout>